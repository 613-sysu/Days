<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00427977"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="#4cffffff"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/logo"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/relativeLayout" />
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:padding= "5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/appwidget_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#000000ff"
                    android:contentDescription="@string/appwidget_text"
                    android:text="距离"
                    android:textColor="#333333"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/appwidget_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="#000000ff"
                    android:contentDescription="@string/appwidget_text"
                    android:text="期末考"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/appwidget_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#000000ff"
                    android:contentDescription="@string/appwidget_text"
                    android:text="还有"
                    android:textColor="#333333"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/appwidget_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:background="#000000ff"
                    android:contentDescription="@string/appwidget_text"
                    android:text="25天"
                    android:textColor="#000000"
                    android:textStyle="bold|italic"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/remind_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赶紧动手！时间迫在眉睫！"
                android:textColor="#b33333"
                android:textSize="10sp"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>